<body>

  <nav id="navbar" class="navbar">
    <div class="container">
      <a class="logo">MyTribe</a>
      <ul class="nav navbar-nav">
        <li><a class="btn" href="/login">Log out</a></li>
      </ul>
    </div>
  </nav>

  <div id="modal" class="content">
    <div id="modal-login" class="modal" data-event="Tribe" style="display:block" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            <h2>Your Tribe</h2>

            <form id="form-login" action="/createTribe" method="post">
              <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" id="name" type="text" name="name"  placeholder="My Tribe">
              </div>

              <!--ADD A MEMBER-->
              <div class="form-group">
                <div class="members">
                  <label>
                    Member1
                    <input class="form-control" type="text" name="membername[]" placeholder="member1">
                  </label>
                  <br/>
                  <label>
                    Member2
                    <input class="form-control" type="text" name="membername[]" placeholder="member2">
                  </label>
                </div>


              </div>
              <a href="javascript:void 0;" id="add-member">add more members</a>
              <br/>
          <p>
            <button class="btn btn-submit" type="submit">create my tribe</button>
          </p>
          </form>
        </div>
      </div>
    </div>
  </div>
  </div>
</body>

</html>